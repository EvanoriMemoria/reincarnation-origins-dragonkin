{
  "type": "origins:multiple",
  "lose_stamina": {
    "type": "origins:action_over_time",
    "interval": 40,
    "entity_action": {
      "type": "origins:exhaust",
      "amount": 0.4
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:fall_flying"
        }
      ]
    }
  },
  "stamina": {
    "type": "origins:resource",
    "_comment": "Maximum flight time in ticks",
    "min": 0,
    "max": 200,
    "start_value": 200,
    "min_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:trigger_cooldown",
          "power": "reincarnation-origins:brown-dragon/no_fly_cooldown"
        },
        {
          "type": "origins:execute_command",
          "command": "title @s actionbar {\"translate\":\"reincarnation-origins.dragonkin.error.too_tired\",\"color\":\"blue\",\"bold\":true}"
        }
      ]
    },
    "hud_render": {
      "should_render": true,
      "bar_index": 2,
      "condition": {
        "type": "origins:resource",
        "resource": "reincarnation-origins:brown-dragon/no_fly_cooldown",
        "comparison": "==",
        "compare_to": 0
      }
    }
  },
  "stamina_counter": {
    "type": "origins:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "origins:if_else",
      "condition": {
        "type": "origins:fall_flying"
      },
      "if_action": {
        "type": "origins:change_resource",
        "resource": "*:*_stamina",
        "operation": "add",
        "change": -5
      },
      "else_action": {
        "type": "origins:change_resource",
        "resource": "*:*_stamina",
        "operation": "add",
        "change": 5
      }
    }
  }
}
