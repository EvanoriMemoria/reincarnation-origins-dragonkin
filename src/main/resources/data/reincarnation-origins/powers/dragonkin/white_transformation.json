{
  "hidden": "true",
  "type": "origins:multiple",
  "bar": {
    "type": "origins:resource",
    "min": 0,
    "max": 100,
    "max_action": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:dragonkin/transform_white"
    },
    "hud_render": {
      "should_render": true,
      "sprite_location": "origins:textures/gui/community/huang/resource_bar_01.png",
      "bar_index": 8
    }
  },
  "recharge": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "change": 5
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:exposed_to_sky"
        },
        {
          "type": "origins:submerged_in",
          "fluid": "water",
          "inverted": true
        },
        {
          "type": "origins:on_fire",
          "inverted": true
        }
      ]
    },
    "interval": 20
  },
  "decharge": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:delay",
      "ticks": 60,
      "action": {
        "type": "origins:change_resource",
        "resource": "*:*_bar",
        "change": -5
      }
    },
    "condition": {
      "type": "origins:exposed_to_sky",
      "inverted": true
    },
    "interval": 20
  },
  "water-decharge": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "change": -10
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:submerged_in",
          "fluid": "water"
        },
        {
          "type": "origins:on_fire"
        }
      ]
    },
    "cooldown": 10
  },
  "respawn": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "operation": "set",
      "change": 0
    }
  }
}
