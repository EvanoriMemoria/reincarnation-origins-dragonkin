{
  "type": "origins:multiple",
  "bar": {
    "type": "origins:resource",
    "min": 0,
    "max": 100,
    "max_action": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:dragonkin/transform_blue"
    },
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "bar_index": 15,
      "condition": {
        "type": "origins:resource",
        "resource": "*:*_bar",
        "comparison": ">",
        "compare_to": 0
      }
    }
  },
  "recharge": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "change": 2
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:or",
          "conditions": [
            {
              "type": "origins:fluid_height",
              "fluid": "minecraft:water",
              "comparison": ">",
              "compare_to": 0.0
            },
            {
              "type": "origins:in_rain"
            }
          ]
        },
        {
          "type": "origins:resource",
          "resource": "reincarnation-origins:dragon-support/transformation_cooldown_blue",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    }
  },
  "fire_decharge": {
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "change": -10
    },
    "condition": {
      "type": "origins:on_fire"
    }
  },
  "no_water_decharge": {
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "change": -2
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": "==",
          "compare_to": 0.0
        },
        {
          "type": "origins:in_rain",
          "inverted": true
        }
      ]
    }
  },
  "respawn": {
    "type": "origins:action_on_callback",
    "entity_action_respawned": {
      "type": "origins:change_resource",
      "resource": "*:*_bar",
      "operation": "set",
      "change": 0
    }
  }
}
