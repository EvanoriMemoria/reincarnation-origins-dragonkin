{
  "type": "origins:multiple",
  "fuelbar": {
    "type": "origins:resource",
    "min": 0,
    "max": 100,
    "start_value": 50,
    "min_action": {
      "type": "origins:execute_command",
      "command": "function reincarnation-origins:dragonkin/transform_into_dragonkin"
    },
    "hud_render": {
      "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
      "bar_index": 15
    }
  },
  "fuel_regen_conditional": {
    "_comment": "Generate fuel while in water or rain",
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_fuelbar",
      "change": 2
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": ">",
          "compare_to": 0.0
        },
        {
          "type": "origins:in_rain"
        }
      ]
    }
  },
  "fuel_degen": {
    "_comment": "Rapidly lose fuel while on fire",
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_fuelbar",
      "change": -5
    },
    "condition": {
      "type": "origins:on_fire"
    }
  },
  "fuel_degen_lava": {
    "_comment": "Lose fuel near lava",
    "type": "origins:action_over_time",
    "interval": 10,
    "entity_action": {
      "type": "origins:delay",
      "ticks": 30,
      "action": {
        "type": "origins:change_resource",
        "resource": "*:*_fuelbar",
        "change": -3
      }
    },
    "condition": {
      "type": "origins:block_in_radius",
      "block_condition": {
        "type": "origins:or",
        "conditions": [
          {
            "type": "origins:block",
            "block": "minecraft:lava"
          },
          {
            "type": "origins:block",
            "block": "minecraft:fire"
          },
          {
            "type": "origins:block",
            "block": "minecraft:magma_block"
          }
        ]
      },
      "radius": 2,
      "shape": "cube",
      "comparison": ">=",
      "compare_to": 1
    }
  },
  "degen_out_of_water": {
    "_comment": "lose fuel while out of water",
    "type": "origins:action_over_time",
    "interval": 20,
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_fuelbar",
      "change": -2
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": "==",
          "compare_to": 0.0
        },
        {
          "type": "origins:in_rain",
          "inverted": true
        }
      ]
    }
  }
}
