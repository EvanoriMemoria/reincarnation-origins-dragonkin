{
  "type": "origins:multiple",
  "name": "Flamethrower",
  "description": "Shoot fire if you have fuel.",
  "flamethrower": {
    "type": "origins:active_self",
    "entity_action": {
      "type": "origins:raycast",
      "distance": 12,
      "block": true,
      "shape_type": "collider",
      "fluid_handling": "none",
			"block_action": {
				"type": "origins:execute_command",
				"command": "fill ~-1 ~ ~ ~1 ~1 ~ minecraft:fire replace minecraft:air"
			},
      "bientity_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:damage",
            "amount": 2,
            "source": {
              "name": "onFire.player",
              "bypasses_armor": true
            }
          },
          {
            "type": "origins:target_action",
            "action": {
              "type": "origins:set_on_fire",
              "duration": 5
            }
          }
        ]
      },
      "before_action": {
        "type": "origins:and",
        "actions": [
          {
            "type": "origins:exhaust",
            "amount": 0.1
          },
          {
            "type": "origins:change_resource",
            "resource": "*:*_fuelbar",
            "change": -1
          }
        ]
      },
      "command_along_ray": "particle minecraft:flame ~ ~ ~ .01 .01 .01 0 2 force",
      "command_step": 0.33
    },
    "cooldown": 5,
    "hud_render": {
      "should_render": false
    },
    "condition": {
      "type": "origins:resource",
      "resource": "*:*_fuelbar",
      "comparison": ">",
      "compare_to": 0
    },
    "key": {
      "key": "key.origins.primary_active",
      "continuous": true
    }
  },
  "fuelbar": {
    "type": "origins:resource",
    "min": 0,
    "max": 6,
    "hud_render": {
      "sprite_location": "origins:textures/gui/resource_bar.png",
      "bar_index": 7,
      "should_render": true
    }
  },
  "fuel_regen": {
    "_comment": "Regenerate Fuel Once Every five Seconds",
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_fuelbar",
      "change": 1
    },
    "interval": 100
  },
  "fuel_regen_conditional": {
    "_comment": "Regenerate an additional fuel Every five Seconds, after completing the breath advancement",
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:change_resource",
      "resource": "*:*_fuelbar",
      "change": 1
    },
    "condition": {
      "type": "origins:advancement",
      "advancement": "reincarnation-origins:reddragonkin/breath"
    },
    "interval": 100
  }
}
